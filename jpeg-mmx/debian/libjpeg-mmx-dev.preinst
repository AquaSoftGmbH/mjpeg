#! /bin/sh
# preinst script for libjpeg-mmx-dev
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# For details see /usr/share/doc/packaging-manual/

case "$1" in
    install|upgrade)
        dpkg-divert --package libjpeg-mmx-dev --add --rename \
             --divert /usr/include/jconfig.h.real /usr/include/jconfig.h
        dpkg-divert --package libjpeg-mmx-dev --add --rename \
             --divert /usr/include/jerror.h.real /usr/include/jerror.h
        dpkg-divert --package libjpeg-mmx-dev --add --rename \
             --divert /usr/include/jmorecfg.h.real /usr/include/jmorecfg.h
        dpkg-divert --package libjpeg-mmx-dev --add --rename \
             --divert /usr/include/jpegint.h.real /usr/include/jpegint.h
        dpkg-divert --package libjpeg-mmx-dev --add --rename \
             --divert /usr/include/jpeglib.h.real /usr/include/jpeglib.h
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


